<resources>
	<!-- Base application theme. -->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:splitMotionEvents">false</item>
		<item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>
	</style>

	<style name="AppTheme" parent="AppBaseTheme">
		<item name="windowActionBar">false</item>
		<item name="android:editTextStyle">@style/AppTheme.EditText</item>
		<!--<item name="actionOverflowButtonStyle">@style/OverflowButton</item>-->
		<item name="android:listViewStyle">@style/AppTheme.ListView</item>
		<item name="android:spinnerStyle">@style/AppTheme.Spinner</item>
		<!--<item name="android:buttonStyle">@style/AppTheme.Button</item>-->
	</style>

	<style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:windowTitleStyle">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.7</item>
		<item name="android:windowBackground">@color/transparent</item>
		<!--<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:backgroundDimEnabled">false</item> -->
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="AppTheme.InputGroupConfirmButton" parent="@android:style/Widget.Button">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/abc_text_size_medium_material</item>
		<item name="android:background">@drawable/shape_popup_btn_bottom</item>
	</style>

	<style name="AppTheme.InputGroupDefaultInput" parent="@android:style/Widget.EditText">
		<item name="android:minHeight">@dimen/popup_default_input_height</item>
		<item name="android:background">@drawable/shape_input_border_bottom</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:paddingLeft">@dimen/default_side_padding_edittext</item>
		<item name="android:paddingRight">@dimen/default_side_padding_edittext</item>
		<item name="android:minLines">1</item>
		<item name="android:maxLines">4</item>
	</style>

	<style name="AppTheme.InputGroupInputBorderless" parent="AppTheme.InputGroupDefaultInput">
		<item name="android:background">@color/transparent</item>
	</style>

	<style name="AppTheme.InputGroupTextLabel" parent="AppTheme.InputGroupInputBorderless">
		<item name="android:maxLines">1000</item>
	</style>

	<style name="AppTheme.InputGroupTitle">
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/abc_text_size_medium_material</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">@dimen/inputgroup_title_vert_padding</item>
		<item name="android:paddingBottom">@dimen/inputgroup_title_vert_padding</item>
	</style>

	<style name="AppTheme.AutocompleteItem">
		<item name="android:minHeight">@dimen/popup_default_input_height</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">@dimen/default_side_padding_edittext</item>
		<item name="android:paddingRight">@dimen/default_side_padding_edittext</item>
		<item name="android:minLines">2</item>
		<item name="android:maxLines">2</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="AppTheme.TopToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="android:background">@color/official_green</item>
	</style>

	<style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
	</style>

	<style name="AppTheme.Toolbar.Title">
		<item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
		<item name="android:maxLines">2</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="AppTheme.ListView">
		<item name="android:background">@color/white</item>
		<item name="android:divider">@color/light_gray</item>
		<item name="android:dividerHeight">1px</item>
	</style>

	<style name="AppTheme.ListView.ListItem">
		<item name="android:background">@drawable/shape_input_border_bottom</item>
		<item name="android:gravity">center_vertical</item>

	</style>

	<style name="AppTheme.EditButton">
		<item name="android:background">@color/transparent</item>
		<item name="android:textColor">@color/official_green</item>
		<item name="android:textSize">@dimen/abc_text_size_small_material</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:drawablePadding">2dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="AppTheme.ActionButton">
		<item name="android:paddingLeft">@dimen/margin_small</item>
		<item name="android:paddingRight">@dimen/margin_small</item>
		<item name="android:minWidth">@dimen/action_button_width</item>
		<item name="android:minHeight">@dimen/action_button_height</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/shape_green_rounded</item>
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="AppTheme.ConfigurationHeader">
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@color/default_gray_background</item>
		<item name="android:paddingLeft">@dimen/margin_default</item>
		<item name="android:paddingRight">@dimen/margin_default</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textColor">@color/default_black</item>
	</style>

	<style name="AppTheme.ConfigurationItemFirst" parent="AppTheme.ConfigurationItemSimple">
		<item name="android:background">@drawable/config_first_item_bg</item>
	</style>

	<style name="AppTheme.ConfigurationItemSimple">
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@color/white</item>
		<item name="android:paddingLeft">@dimen/margin_default</item>
		<item name="android:paddingRight">@dimen/margin_default</item>
		<item name="android:textColor">@color/default_black</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="AppTheme.ConfigurationItemLabel">
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:textColor">@color/default_black</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="AppTheme.ConfigurationItemValueText">
		<item name="android:background">@color/transparent</item>
		<item name="android:textColor">@color/official_green</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="AppTheme.Switch" parent="AppTheme">
		<item name="android:thumb">@drawable/switch_inner</item>
		<item name="track">@drawable/switch_track</item>

	</style>

	<!-- -->
	<!-- -->
	<!-- -->

	<!-- Custom app themes -->

	<style name="AppThemeNoToolbar" parent="@android:style/Theme.Holo.NoActionBar"/>
	<!-- END: Custom app themes -->

	<!-- Activities -->
	<style name="AppTheme.Activity">
		<item name="android:background">@color/default_gray_background</item>
	</style>
	<!-- END: Activities -->

	<!-- Toolbar -->
	<style name="AppTheme.ToolbarLegacy">
		<item name="android:background">@color/toolbar_background_default</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="AppTheme.ToolbarLegacy.Title">
		<item name="android:background">@color/transparent</item>
	</style>
	<!-- END: Toolbar -->

	<!-- Account toolbar -->
	<style name="AppTheme.AccountToolbar">
		<item name="android:background">@color/default_black</item>
	</style>
	<!-- END: Account toolbar -->

	<!-- Select NIS category toolbar -->
	<style name="AppTheme.SelectNisCategoryToolbar" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">@color/main_text</item>
	</style>
	<!-- END: Select NIS category toolbar -->

	<!-- Edit text -->
	<style name="AppTheme.EditText" parent="@android:style/Widget.EditText">
		<!-- Android bug?
			https://code.google.com/p/android/issues/detail?can=2&start=0&num=100&q=label%3APriority-Small&colspec=ID%20Type%20Status%20Owner%20Summary%20Stars&groupby=&sort=&id=77982#makechanges -->
		<!-- <item name="android:layout_marginTop">15dp</item> -->
		<item name="android:background">@drawable/shape_default_input_rounded</item>
	</style>

	<style name="AppTheme.DialogEditText" parent="@android:style/Widget.EditText">
		<!-- Android bug?
			https://code.google.com/p/android/issues/detail?can=2&start=0&num=100&q=label%3APriority-Small&colspec=ID%20Type%20Status%20Owner%20Summary%20Stars&groupby=&sort=&id=77982#makechanges -->
		<!-- <item name="android:layout_marginTop">15dp</item> -->
		<item name="android:background">@drawable/shape_default_dialog_input_rounded</item>
	</style>
	<!-- END: Edit text -->

	<!-- Spinner -->

	<style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner">
		<item name="android:background">@drawable/bg_spinner</item>
		<item name="android:paddingRight">38dp</item>
		<item name="android:layout_marginLeft">@dimen/margin_default</item>
		<item name="android:minHeight">@dimen/default_input_height</item>
	</style>
	<!-- END: Spinner -->

	<!-- List view -->

	<!--<style name="AppTheme.ListView">-->
	<!--<item name="android:background">@drawable/shape_listview</item>-->
	<!--</style>-->
	<style name="AppTheme.ListView.ListItem.Text">
		<item name="android:layout_margin">16dp</item>
		<item name="android:textColor">@color/listview_item_text_color</item>
	</style>
	<!-- END: List view -->

	<!-- Button -->
	<style name="AppTheme.Button" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/shape_default_button_rounded</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:paddingTop">@dimen/default_input_vert_padding</item>
		<item name="android:paddingBottom">@dimen/default_input_vert_padding</item>
	</style>

	<style name="AppTheme.ButtonOrange" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/shape_default_button_rounded</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:paddingTop">@dimen/default_input_vert_padding</item>
		<item name="android:paddingBottom">@dimen/default_input_vert_padding</item>
	</style>
	<!-- END: Button -->

	<!-- Bottom action button -->
	<style name="AppTheme.BottomActionButton">
		<item name="android:background">@color/button_bottom_background</item>
		<item name="android:textColor">@color/white</item>
	</style>
	<!-- END: Bottom action button -->

	<!-- Add account buttons -->
	<style name="AppTheme.AddAccountButton">
		<item name="android:background">@drawable/shape_btn_add_account</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:minWidth">200dp</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
	<!-- END: Add account buttons -->
</resources>
