<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/view_activity_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:background="@color/white"
	tools:context="org.nem.nac.ui.activities.MessagesActivity">

	<android.support.design.widget.AppBarLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:theme="@style/AppTheme.AppBarOverlay">

		<include layout="@layout/toolbar_top"/>
	</android.support.design.widget.AppBarLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="?attr/actionBarSize"
		tools:context="org.nem.nac.ui.activities.MessagesActivity">
		<!--Top bar-->
		<LinearLayout
			android:id="@+id/layout_top_bar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/top_bar_height"
			android:paddingLeft="@dimen/margin_small"
			android:paddingRight="@dimen/margin_small"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:orientation="horizontal"
			android:gravity="center"
			>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				>
				<!--Name-->
			<TextView
				android:id="@+id/label_account_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="@color/default_black"
				android:ellipsize="end"
				android:maxLines="2"
				android:textSize="@dimen/text_size_medium"
				/>
				<!--Balance-->
			<TextView
				android:id="@+id/field_balance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/medium_letter_approx_size"
				android:layout_marginStart="@dimen/medium_letter_approx_size"
				android:textSize="@dimen/abc_text_size_medium_material"
				android:textColor="@color/official_green"
				android:singleLine="true"
				android:maxLines="1"
				/>
			</LinearLayout>
		</LinearLayout>
		<!--Border-->
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/light_gray"
			android:layout_below="@+id/layout_top_bar"
			/>
		<!--Transactions block-->
		<ScrollView
			android:id="@+id/scroll_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="@dimen/margin_small"
			android:paddingBottom="@dimen/margin_small"
			android:layout_below="@+id/layout_top_bar"
			android:layout_above="@+id/panel_send_message"
			android:layout_alignWithParentIfMissing="true"
			>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/default_side_padding"
				android:paddingRight="@dimen/default_side_padding"
				android:orientation="vertical"
				>
				<!--Transactions-->
				<org.nem.nac.ui.controls.TransfersList
					android:id="@+id/list_confirmed"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					/>
				<!--Separator-->
				<RelativeLayout
					android:id="@+id/separator"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/list_confirmed"
					android:visibility="gone"
					>

					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_centerInParent="true"
						android:background="@color/official_gray"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="@dimen/margin_small_text"
						android:layout_centerInParent="true"
						android:background="@color/white"
						android:text="Unconfirmed"/>
				</RelativeLayout>
				<!--Unconfirmed transactions-->
				<org.nem.nac.ui.controls.UnconfirmedTransfersList
					android:id="@+id/list_unconfirmed"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					/>
			</LinearLayout>
		</ScrollView>
		<!--Send transaction panel-->
		<LinearLayout
			android:id="@+id/panel_send_message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/toolbar_bottom"
			android:layout_alignWithParentIfMissing="true"
			android:orientation="vertical"
			android:padding="@dimen/margin_small"
			android:background="@color/default_black"
			>
			<!--Top row-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/send_tran_panel_line_height"
				android:orientation="horizontal"
				>

				<org.nem.nac.ui.controls.AmountInput
					android:id="@+id/input_amount"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:paddingLeft="@dimen/margin_small"
					android:paddingRight="@dimen/margin_small"
					android:inputType="numberDecimal"
					android:digits="0123456789,."
					android:hint="@string/input_hint_amount"
					android:background="@drawable/shape_white_left_rounded"
					android:lines="1"
					android:imeOptions="actionNext"
					/>

				<ImageView
					android:id="@+id/btn_encrypt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:scaleType="centerInside"
					android:layout_marginLeft="1dp"
					android:padding="@dimen/sent_tran_panel_btns_padding"
					android:background="@drawable/shape_enc_btn"
					android:src="@drawable/ic_btn_enc"
					android:clickable="true"
					/>

				<TextView
					android:id="@+id/btn_accounts"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/send_tran_panel_line_height"
					android:layout_marginLeft="@dimen/medium_letter_approx_size"
					android:gravity="center"
					android:clickable="true"
					android:text="@string/btn_accounts"
					android:background="@drawable/shape_green_rounded"
					android:textColor="@color/white"
					android:textSize="@dimen/abc_text_size_medium_material"
					android:paddingLeft="@dimen/margin_small"
					android:paddingRight="@dimen/margin_small"
					android:visibility="gone"
					/>
			</LinearLayout>
			<!--Bottom row-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/send_tran_panel_line_height"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/margin_small"
				>

				<EditText
					android:id="@+id/input_message"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:minHeight="@dimen/send_tran_panel_line_height"
					android:paddingLeft="@dimen/margin_small"
					android:paddingRight="@dimen/margin_small"
					android:paddingTop="@dimen/margin_x_small"
					android:paddingBottom="@dimen/margin_x_small"
					android:maxLines="1"
					android:singleLine="true"
					android:layout_weight="1"
					android:hint="@string/input_hint_message"
					android:background="@drawable/shape_default_white_rounded"
					android:imeOptions="actionDone"
					/>

				<TextView
					android:id="@+id/btn_send"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/send_tran_panel_line_height"
					android:layout_marginLeft="@dimen/medium_letter_approx_size"
					android:gravity="center"
					android:clickable="true"
					android:text="@string/btn_send"
					android:background="@drawable/shape_green_rounded"
					android:textColor="@color/white"
					android:textSize="@dimen/abc_text_size_medium_material"
					android:paddingLeft="@dimen/margin_small"
					android:paddingRight="@dimen/margin_small"
					/>
			</LinearLayout>
		</LinearLayout>

		<include layout="@layout/toolbar_bottom"/>
	</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
