<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/list_item_default_height"
			  style="@style/AppTheme.ListView.ListItem"
	>
	<!--Edit icon-->
	<TextView
		android:id="@+id/listitem_btn_edit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp"
		android:layout_marginEnd="5dp"
		android:drawableRight="@drawable/ic_hd_edit"
		android:drawableEnd="@drawable/ic_hd_edit"
		style="@style/AppTheme.EditButton"
		android:visibility="gone"
		/>
	<!--Flag-->
	<ImageView
		android:id="@+id/listitem_img_flag"
		android:layout_width="20dp"
		android:layout_height="wrap_content"
		android:scaleType="centerInside"
		/>
	<!--Server-->
	<TextView
		android:id="@+id/listitem_label_server"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_small"
		android:layout_weight="1"
		android:textSize="@dimen/abc_text_size_medium_material"
		android:singleLine="true"
		android:maxLines="1"
		android:ellipsize="middle"
		/>
	<!--Check mark-->
	<ImageView
		android:id="@+id/listitem_check_mark"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="44dp"
		android:clickable="false"
		android:src="@drawable/ic_hd_radio_button"
		android:scaleType="centerInside"
		/>
	<!--delete icon-->
	<ImageView
		android:id="@+id/listitem_delete_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="44dp"
		android:src="@drawable/ic_hd_delete"
		android:visibility="gone"
		/>
</LinearLayout>
