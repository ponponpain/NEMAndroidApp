<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/list_item_default_height"
			  android:gravity="center_vertical"
			  android:background="@color/white"
	>

	<ImageView
		android:id="@+id/imgview_drag_handle"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginRight="5dp"
		android:layout_marginEnd="5dp"
		android:src="@drawable/ic_hd_sort_handle"
		android:visibility="gone"
		/>
	<!--Edit icon-->
	<TextView
		android:id="@+id/listitem_btn_edit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp"
		android:layout_marginEnd="5dp"
		android:drawableRight="@drawable/ic_hd_edit"
		android:drawableEnd="@drawable/ic_hd_edit"
		style="@style/AppTheme.EditButton"
		android:visibility="gone"
		/>
	<!--Acc name-->
	<TextView
		android:id="@+id/listitem_label_account_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textSize="@dimen/abc_text_size_medium_material"
		android:maxLines="2"
		android:ellipsize="end"
		/>
	<!--Right Arrow-->
	<ImageView
		android:id="@+id/listitem_arrow_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="44dp"
		android:clickable="false"
		android:src="@drawable/ic_hd_account_arrow"
		/>
	<!--delete icon-->
	<ImageView
		android:id="@+id/listitem_delete_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="44dp"
		android:src="@drawable/ic_hd_delete"
		android:visibility="gone"
		/>
</LinearLayout>
